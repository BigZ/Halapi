  "license": "MIT",
  "authors": [
    {
      "name": "Romain Richard",
      "email": "romain.richard@lab5com.fr"
    }
  ],
  "require": {
    "php": ">=5.6",
    "doctrine/common": "~2.0",
    "doctrine/annotations": "~1.0",
