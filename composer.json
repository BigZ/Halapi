    "symfony/options-resolver": "^3.1",
    "psr/http-message": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.6",
    "squizlabs/php_codesniffer": "^3.3",
    "escapestudios/symfony2-coding-standard": "^3.4",
    "codeclimate/php-test-reporter": "^0.3.2",
    "doctrine/orm": "^2.5"
  },
  "suggest": {
  },
  "autoload": {
    "psr-0": { "Halapi": "src/" }
